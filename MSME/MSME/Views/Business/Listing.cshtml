
@{
    ViewData["Title"] = "Enterprise Listing";
    Layout = "~/Views/Shared/_Layout_Public.cshtml";
}
    <div class="card" style="padding:10px;">
        
        <div class="row">
            <div class="col-sm-12">
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>
                                <a href="@Url.Action("Register","Business")" class="btn btn-success">New Enterprise</a>
                            </th>
                            <th>Name</th>
                            <th>Owner</th>
                            <th>Registered On</th>
                            <th>Expired On</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                <a href="#" class="btn btn-warning">View Detail</a> 
                            </td>
                            <td>
                                Mr. IT Myanmar
                            </td>
                            <td>
                                U Thant Sin Aung
                            </td>
                            <td>
                                12.Feb.2020
                            </td>
                            <td>
                                12.Feb.2022
                            </td>
                            <td>
                                Approved, Pending for Payment
                                <br />
                                <button type="button" class="btn btn-default" data-toggle="modal" data-target="#exampleModal">
                                    See Workflow Detail
                                </button>
                            </td>
                            <td>
                                <a href="#" class="btn btn-secondary">Update Data</a>   <a href="#" class="btn btn-success">Pay</a> <a href="#" class="btn btn-primary">Renew</a>  <a href="#" class="btn btn-danger">Delete</a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content"  style="width:1100px;height:300px;">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Application Workflow</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <img src="~/themes/dist/img/sample_flow.JPG" alt="Alternate Text" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    