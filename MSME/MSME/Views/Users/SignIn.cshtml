@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer _localizer
@{
    ViewData["Title"] = "";
    Layout = "~/Views/Shared/_Layout_Public.cshtml";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-md-offset-3">
        <div class="register-box" style="width:100%;">
            <div class="card-body register-card-body">
                <p class="login-box-msg">@(_localizer["Sign In"])</p>

                <form action="@Url.Action("Authenticate","Users")" method="post">

                    <div class="input-group mb-3">
                        <button type="button" class="btn btn-default">@(_localizer["+95"])</button>
                        <input type="number" class="form-control" placeholder="@(_localizer["e.g 0912345678"])">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-mobile"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <input type="password" class="form-control" placeholder="@(_localizer["Password"])">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row text-center">
                        <div class="col-sm-12">
                            <a href="#" class="text-center">@(_localizer["Forgot your password?"])</a>
                            
                        </div>
                        <!-- /.col -->

                    </div>
                    <div class="row text-center">
                        <div class="col-sm-12">
                            <button type="submit" class="btn btn-primary btn-block">@(_localizer["Sign In"])</button>
                        </div>
                        <!-- /.col -->

                    </div>
                    <div class="row text-center">
                        <div class="col-sm-12">
                            <hr />
                            <a href="@Url.Action("Register","Users")" class="text-center">@(_localizer["Register User"])</a>
                        </div>
                        <!-- /.col -->

                    </div>
                </form>


            </div>
            <!-- /.form-box -->

        </div>
        <!-- /.register-box -->
    </div>
</div>


